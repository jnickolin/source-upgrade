{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="gh-main">
    <article class="gh-article {{post_class}}">

        {{#match @page.show_title_and_feature_image}}
            <header class="about-header gh-canvas">
                <div class="about-text-lockup">
                    <h1 class="about-header-title is-title">{{title}}</h1>
                    {{#if custom_excerpt}}
                    <p class="about-page-excerpt is-body">{{custom_excerpt}}</p>
                    {{/if}}
                </div>
                <div class="about-image">
                    {{> "feature-image"}}
                </div>
            </header>
        {{/match}}

        <section class="about-content-wrapper gh-canvas is-body">
            <div class="about-content">{{content}}</div>
        </section>

    </article>
</main>

{{/post}}