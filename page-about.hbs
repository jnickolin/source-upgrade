{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="gh-main">
    <article class="about-article gh-article {{post_class}}">
        <div class="about-header-content">
            <header class="about-header gh-canvas">
                <div class="about-text-lockup">
                    <h1 class="about-header-title is-title slide-up-el">{{title}}</h1>
                    {{#if custom_excerpt}}
                    <p class="about-page-excerpt post-intro is-body">{{custom_excerpt}}</p>
                    {{/if}}
                </div>
            </header>
            <section class="about-content-wrapper gh-canvas is-body">
                <div class="about-content">{{content}}</div>
            </section>
        </div>
        <div class="about-image">
            {{> "feature-image"}}
        </div>

    </article>
</main>

{{/post}}