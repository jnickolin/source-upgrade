{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

<div class="work-wrapper">
    {{#post}}

    <main class="work-main">
        <article class="gh-article {{post_class}}">

            {{#match @page.show_title_and_feature_image}}
                <header class="gh-article-header gh-canvas">
                    <h1 class="work-title">{{title}}</h1>
                    {{#if custom_excerpt}}
                        <p class="gh-article-excerpt is-body">{{custom_excerpt}}</p>
                        {{else}}
                        <p class="gh-article-excerpt is-body">{{excerpt}}</p>
                    {{/if}}
                </header>
            {{/match}}
        </article>
    </main>

    {{/post}}

    {{!-- Fetch posts and render them --}}
    {{#get "posts" include="authors" limit="10"}}
        <section class="work-list gh-outer">
            <div class="gh-container-inner gh-inner">
                <main class="gh-main">
                    <div class="gh-feed is-grid">
                        {{#foreach posts}}
                            {{> "post-card" lazyLoad=true}}
                        {{/foreach}}
                    </div>
                </main>
            </div>
        </section>
    {{/get}}

</div>