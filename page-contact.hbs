{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#post}}

<main class="contact-main">
    <article class="contact-article {{post_class}}">

        {{#match @page.show_title_and_feature_image}}
            <header class="contact-header gh-canvas">
                <h1 class="contact-title is-title">HELLO.</h1>
                {{#if custom_excerpt}}
                    <div>
                        <p class="contact-excerpt is-body slide-up-el">{{custom_excerpt}}</p>
                    </div>
                {{/if}}
                {{> "feature-image"}}
            </header>
        {{/match}}

        <section class="contact-content gh-canvas is-body slide-up-el">
            <div>{{content}}</div>
        </section>

    </article>
</main>

{{/post}}